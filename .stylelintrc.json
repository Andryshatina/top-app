{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": "tab",
		"font-family-name-quotes": "always-where-required",
		"color-hex-case": "upper",
		"no-empty-source": null,
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{
				"ignoreShorthands": [
					"/^grid.*/"
				]
			}
		]
	}
}